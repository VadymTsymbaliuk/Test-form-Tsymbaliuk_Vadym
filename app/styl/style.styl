@font-face
  font-family "Graphik"
  src local("../fonts/GraphikBold.otf")
  font-weight 600

*
  box-sizing border-box
  margin 0
  padding 0

html
body
  font-family 'Open Sans'
  font-size 16px

.container
  height inherit
  padding-top 77px
  padding-bottom: 30px
  display flex
  flex-direction column
  align-items center
  background-color #f7f8fb

@media screen and (max-width: 600px)
  .container
    padding 10px 10px 30px 10px

.logo-container
  margin-bottom 55px

.form-login
  display flex
  flex-direction column
  max-width 576px
  height 628px
  padding 60px 64px 60px 64px
  gap 28px
  background-color #fff
  border-radius 12px
  box-shadow 0px 8px 40px rgba(0, 0, 0, 0.1)

@media screen and (max-width: 600px)
  .form-login
    height inherit
    padding 12px 16px 12px 16px

.form-login__title
  text-align center
  font-family "Graphik", sans-serif
  font-size 32px
  font-weight 700
  line-height 40px

.social-button
  display grid
  grid-template-columns 34% 31% 28%
  padding-top: 7px
  gap 15px

.social-button__item
  position relative
  padding 8px 28px
  border 1px solid #c7ced3
  border-radius 4px
  font-size 14px
  line-height 24px
  text-align end
  text-decoration none
  color #414141
  cursor pointer

  &:hover
    border: 1px solid #0777CF

  &:focus
    outline #0777CF
    box-shadow: 0px 0px 0px 1px #FFFFFF, 0px 0px 0px 3px #667988

.social-button__item_facebook:before,
.social-button__item_google:before,
.social-button__item_apple:before
  position absolute
  content ""
  width 24px
  height 24px
  top 50%
  left 28px
  transform translateY(-50%)
  background-repeat no-repeat
  background-size inherit
  background-position center center

.social-button__item_facebook
  &:before
    background-image url("../img/Facebook-login.svg")

.social-button__item_google
  &:before
    background-image url("../img/Google-login.svg")

.social-button__item_apple
  &:before
    background-image url("../img/Apple-login.svg")


@media screen and (max-width: 600px)
  .social-button
    grid-template-columns 100%

    &__item
      text-align center


.form-login__divider
  width 100%

  &-text
    display block
    width 100%
    position relative
    text-align center
    font-size 14px
    color #546470

    &:before
      left 0

    &:after
      right 0

.form-login__divider-text:before,
.form-login__divider-text:after
  content ""
  position absolute
  top 50%
  height 1px
  width calc(50% - 86px)
  background-color rgba(216, 224, 230, 1)

.form
  display flex
  flex-direction column
  gap 16px
  padding-top: 4px

  &__form-row
    display flex
    flex-direction column
    gap 4px

  &__form-row_info
    margin-top: 12px
    gap 4px

  &__input
    height: 48px
    border 1px solid #81919d
    border-radius 4px
    padding 12px
    font-size: 16px
    line-height: 24px
    color #667988

    &:hover
      border 1px solid #738592

    &:focus
      border: 1px solid #738592
      box-shadow: 0px 0px 0px 1px #FFFFFF, 0px 0px 0px 3px #667988

    &:focus-visible
      outline #738592

  &__submit-input
    height 48px
    color #fff
    font-size: 16px;
    line-height: 24px;
    font-weight 700
    background-color #0777CF
    border-radius 4px
    padding 12px
    border: 1px solid transparent
    cursor: pointer

    &:hover
      background-color #348FD7
      border 1px solid #348FD7

    &:focus
      background-color #06599a
      box-shadow 0px 0px 0px 1px #FFFFFF, 0px 0px 0px 3px #667988


  &__submit-span
    position relative
    text-align center
    font-size 12px
    color #546470
    margin-top: 1px

/*error data in form*/

.form__input.input-error
  border-radius 4px
  border 1px solid #D73F3E

.input-error
  font-size 12px
  line-height 16px
  color #D73F3E


.form-login__additional-info
  display flex
  flex-direction column
  padding-top: 2px
  gap 16px

.additional-login
  text-align center

  &__link
    color: #0777CF

    &:visited
      color #667988

      &:hover
        color: #348FD7

    &:hover
      color #348FD7


.additional-agree-policy
  text-align center
  font-size 12px
  line-height 17px
  color #667988

  &__link
    color: #667988

    &:visited
      color #667988

      &:hover
        color #348FD7

    &:hover
      color #348FD7


/*exchenge list*/
.exchange-list
  display flex
  flex-direction column
  gap 12px
  list-style none

.exchange-list__item
  padding: 10px
  border 1px solid #81919d
  border-radius 4px